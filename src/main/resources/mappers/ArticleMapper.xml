<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.ArticleMapper">

    <insert id="insertCommentByArticleNo" parameterType="ArticleComment">
        insert into articleComment(articleNo, writerId, comment) values(#{articleNo}, #{writerId}, #{comment})
    </insert>
    <insert id="insertNewArticleByBandNo" parameterType="Article">
        insert into article(bandNo, writerId, content) values(#{bandNo}, #{writerId}, #{content})
    </insert>


    <select id="selectAllArticleByBandNo" parameterType="int" resultType="Article">
        select * from article where bandNo=#{no} order by wroteAt desc
    </select>
    <select id="selectArticleCommentsByArticleIdx" parameterType="int" resultType="ArticleComment">
        select * from articleComment where articleNo=#{articleNo} order by writingTime desc
    </select>
    <select id="selectArticleByContent" parameterType="String" resultType="Article">
        select content from article order by wroteAt desc
    </select>
    <select id="selectArticleByIdx" resultType="Article" parameterType="int">
        select * from article where idx=#{idx}
    </select>



    <update id="updateArticle" parameterType="Article">
        update article set content=#{content} where idx=#{idx}
    </update>



    <delete id="deleteArticleCommentByArticleIdx" parameterType="int">
        delete from articleComment where articleNo=#{idx}
    </delete>
    <delete id="deleteArticleByidx" parameterType="int">
        delete from article where idx=#{idx}
    </delete>



</mapper>
